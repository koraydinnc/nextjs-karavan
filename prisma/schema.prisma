generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  name         String
  surname      String
  reservations Reservation[] // Kullanıcı ile rezervasyonlar arasındaki ilişki
}

model Admin {
  id           Int    @id @default(autoincrement())
  email        String @unique
  password     String
}

model Reservation {
  id                Int           @id @default(autoincrement())
  startDate         DateTime
  endDate           DateTime
  person            Int
  user              User          @relation(fields: [userId], references: [id])
  userId            Int
  caravan           Caravan?      @relation(fields: [caravanId], references: [id])
  caravanId         Int?
  caravanPark       CaravanPark?  @relation(fields: [caravanParkId], references: [id])
  caravanParkId     Int?
  tinyHouse         TinyHouse?    @relation(fields: [tinyHouseId], references: [id])
  tinyHouseId       Int?
}

model Caravan {
  id           Int           @id @default(autoincrement())
  name         String
  description  String
  price        Float
  reservations Reservation[] 
}

model CaravanPark {
  id            Int           @id @default(autoincrement())
  name          String
  description   String
  price         Float
  reservations  Reservation[] 
}

model TinyHouse {
  id           Int           @id @default(autoincrement())
  name         String
  description  String
  price        Float
  reservations Reservation[] 
}
